<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controller.HomeController">

    <stylesheets>
        <URL value="@../styles/home.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label alignment="CENTER" text="RESSOURCES HUMAINES!" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="buttonEmployees" maxHeight="100.0" maxWidth="250.0" minHeight="100.0" minWidth="250.0" text="Employees">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" smooth="true">
                                    <image>
                                        <Image preserveRatio="true" requestedHeight="140" requestedWidth="140" smooth="true" url="@../icons/Employees.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="buttonDepartments" maxHeight="100.0" maxWidth="250.0" minHeight="100.0" minWidth="250.0" text="Departments">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" smooth="true">
                                    <image>
                                        <Image preserveRatio="true" requestedHeight="140" requestedWidth="140" smooth="true" url="@../icons/Departments.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="buttonPosts" maxHeight="100.0" maxWidth="250.0" minHeight="100.0" minWidth="250.0" text="Posts">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" smooth="true">
                                    <image>
                                        <Image preserveRatio="true" requestedHeight="140" requestedWidth="140" smooth="true" url="@../icons/Posts.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="buttonLocalisations" maxHeight="100.0" maxWidth="250.0" minHeight="100.0" minWidth="250.0" text="Localisations">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" smooth="true">
                                    <image>
                                        <Image preserveRatio="true" requestedHeight="140" requestedWidth="140" smooth="true" url="@../icons/Localisation.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
