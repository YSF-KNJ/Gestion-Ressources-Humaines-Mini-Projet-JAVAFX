<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.controller.HomeController"
            prefHeight="600.0"
            prefWidth="800.0"
            fx:id="AnchorPane">

    <stylesheets>
        <URL value="@../styles/home.css"/>
    </stylesheets>
    <children>
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="800.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <children>
                <Label text="RESSOURCES HUMAINES!" textAlignment="CENTER" alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="25.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="buttonEmployees" text="Employees" minWidth="250.0" minHeight="100.0" maxWidth="250.0" maxHeight="100.0">
                            <graphic>
                                <ImageView fitWidth="50.0" fitHeight="50.0" smooth="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/Employees.png" preserveRatio="true" requestedWidth="140" requestedHeight="140" smooth="true"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="buttonDepartments" text="Departments" minWidth="250.0" minHeight="100.0" maxWidth="250.0" maxHeight="100.0">
                            <graphic>
                                <ImageView fitWidth="50.0" fitHeight="50.0" smooth="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/Departments.png" preserveRatio="true" requestedWidth="140" requestedHeight="140" smooth="true"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="buttonPosts" text="Posts" minWidth="250.0" minHeight="100.0" maxWidth="250.0" maxHeight="100.0">
                            <graphic>
                                <ImageView fitWidth="50.0" fitHeight="50.0" smooth="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/Posts.png" preserveRatio="true" requestedWidth="140" requestedHeight="140" smooth="true"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="buttonLocalisations" text="Localisations" minWidth="250.0" minHeight="100.0" maxWidth="250.0" maxHeight="100.0">
                            <graphic>
                                <ImageView fitWidth="50.0" fitHeight="50.0" smooth="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/Localisation.png" preserveRatio="true" requestedWidth="140" requestedHeight="140" smooth="true"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>